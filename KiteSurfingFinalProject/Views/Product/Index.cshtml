@model IEnumerable<KiteSurfingFinalProject.Models.Product>
@{
    <link href="~/Content/Gridmvc.css" rel="stylesheet" /> 
}

@{
    
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
@*<body style="background-color:rgba(30, 47, 183, 0.25)";>*@
<body style="background-image: url('http://www.somosmundo.com/wp-content/uploads/2014/11/Jericoacoara-2.jpg')";>
    <p class=" margin-top-20" style="margin-top:20px" }>
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "mybtn" })
    </p>
    @*Search button*@
    @using (Html.BeginForm())
    {
        <p>
            Search Name: @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
            <input type="submit" value="Find" />
        </p>
    } 

    <table class="table">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.user.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductTypeID)
                </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.Company)*@
                @Html.ActionLink("Company", "Index", new { Sorting_Order = ViewBag.SortingName })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Year)*@
                @Html.ActionLink("Year", "Index", new { Sorting_Order = ViewBag.SortingName })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Price)*@
                @Html.ActionLink("Price", "Index", new { Sorting_Order = ViewBag.SortingName })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Date)*@
                @Html.ActionLink("Date", "Index", new { Sorting_Order = ViewBag.SortingDate })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.user.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductTypeID)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
